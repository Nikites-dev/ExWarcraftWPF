<Window x:Class="ExWarcraftWPF.WindowRes.CreateMuch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExWarcraftWPF.WindowRes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="CreateMuch" Height="450" Width="800"  MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="45*"/>

            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="45*"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>

            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>

            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>

        </Grid.RowDefinitions>


        <Menu
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="8"
            VerticalContentAlignment="Top"
            VerticalAlignment="Top"
            Height="20">
            <MenuItem Header="back" Click="MenuItem_Click"></MenuItem>
            <MenuItem Header="reset" Click="MenuItem_Click"></MenuItem>
        </Menu>

        <ListBox
            x:Name="listBoxTeam1"
            Grid.Column="2"
            Grid.Row="2"
            Grid.RowSpan="5"
            Grid.ColumnSpan="2"
            Background="CornflowerBlue"
            Margin="5, 5, 5, 5"
            >
        </ListBox>

        <ListBox
            x:Name="listBoxTeam2"
            Grid.Column="4"
            Grid.Row="2"
            Grid.RowSpan="5"
            Grid.ColumnSpan="2"
            Background="OrangeRed"
            Margin="5, 5, 5, 5"
            >
        </ListBox>


        <Button
            x:Name="btnAutho"
            Content="Autho genretate"
            Padding="3"
            Width="80"
            Height="21"
            FontSize="9"
            HorizontalAlignment="Left"
            Margin="15,25,0,0"
            VerticalAlignment="Top" Click="btnAutho_Click"/>
        
        
        <ListBox
            x:Name="listBoxHero"
            Grid.Column="0"
            Grid.Row="2"
            Grid.RowSpan="5"
            Grid.ColumnSpan="2"
            Background="LightGray"
            Margin="15, 5, 75, 5" SelectionChanged="listBoxHero_SelectionChanged"
            >
        </ListBox>


        <TextBlock
            x:Name="txtAverage1"
            Grid.Column="2" 
             HorizontalAlignment="Center" 
          
            Grid.Row="7"
            TextWrapping="Wrap"
            Text=""
            VerticalAlignment="Top" 
            Grid.ColumnSpan="2"/>

        <TextBlock
            x:Name="txtAverage2"
            Grid.Column="4" 
            HorizontalAlignment="Center" 
          
            Grid.Row="7"
            TextWrapping="Wrap"
            Text=""
            VerticalAlignment="Top" 
            Grid.ColumnSpan="2"/>

        <Button
            x:Name="btnContinue"
            Grid.Column="3" 
            Content="Continue" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Width="100"
            Height="30"
            
            
            Grid.Row="7"
            Grid.ColumnSpan="2"/>


        <StackPanel 
            Grid.Column="2"
            Grid.Row="0"
            Height="30"
            Margin="0, 21, 0, 0"
            Orientation="Horizontal"
            Background="LemonChiffon"
            Grid.ColumnSpan="4"
            >
            <TextBlock
                x:Name="txtSelectHero"
                HorizontalAlignment="Left"
                Height="20"
                Width="100"
                Margin="5"
                Background="Wheat"
                />

            <Button
                x:Name="btnDelete"
                HorizontalAlignment="Left"
                Height="20"
                Content="Delete"
                Width="50"
                Margin="5"
                Background="Bisque"
                />

        </StackPanel>


        <Button
            x:Name="btnAddTeam1"
                Grid.Column="0"
                Grid.Row="7"
                FontSize="7"
                HorizontalAlignment="Left"
                Height="20"
                Content="Add Blue"
                Width="50"
                Foreground="White"
                Margin="15,4,0,24"
                Background="CornflowerBlue"
                Click="btnAddTeam_Click"
                />

        <Button
            x:Name="btnAddTeam2"
                Grid.Column="0"
                Grid.Row="7"
                FontSize="7"
                HorizontalAlignment="Left"
                Height="20"
                Foreground="White"
                Content="Add Red"
                Width="50"
                Margin="75,4,0,24"
                Background="OrangeRed" 
                Grid.ColumnSpan="2" 
                Click="btnAddTeam_Click"
                />

    </Grid>
</Window>
